{
  "name": "@chakra-ui/theme",
  "version": "2.1.0",
  "description": "The default theme for chakra components",
  "keywords": [
    "theme",
    "theming",
    "ui mode",
    "ui"
  ],
  "sideEffects": false,
  "author": "Segun Adebayo <sage@adebayosegun.com>",
  "homepage": "https://github.com/chakra-ui/chakra-ui#readme",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "components",
    "foundations",
    "foundations/blur",
    "foundations/borders",
    "foundations/breakpoints",
    "foundations/colors",
    "foundations/radius",
    "foundations/shadows",
    "foundations/sizes",
    "foundations/spacing",
    "foundations/typography",
    "foundations/transition",
    "foundations/z-index"
  ],
  "entrypoints": [
    "src/index.ts",
    "src/components/index.ts",
    "src/foundations/index.ts",
    "src/foundations/blur.ts",
    "src/foundations/borders.ts",
    "src/foundations/breakpoints.ts",
    "src/foundations/colors.ts",
    "src/foundations/radius.ts",
    "src/foundations/shadows.ts",
    "src/foundations/sizes.ts",
    "src/foundations/spacing.ts",
    "src/foundations/typography.ts",
    "src/foundations/transition.ts",
    "src/foundations/z-index.ts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chakra-ui/chakra-ui.git",
    "directory": "packages/theme"
  },
  "bugs": {
    "url": "https://github.com/chakra-ui/chakra-ui/issues"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "TIMING=1 eslint src/**/*.ts* --fix",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "@chakra-ui/anatomy": "2.0.1",
    "@chakra-ui/theme-tools": "2.0.2",
    "@chakra-ui/utils": "2.0.2"
  },
  "peerDependencies": {
    "@chakra-ui/system": ">=2.0.0-next.0"
  },
  "devDependencies": {
    "@chakra-ui/cli": "2.1.0",
    "@chakra-ui/system": "2.1.3"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./components": {
      "import": "./dist/components/index.mjs",
      "require": "./dist/components/index.js",
      "types": "./dist/components/index.d.ts"
    },
    "./foundations": {
      "import": "./dist/foundations/index.mjs",
      "require": "./dist/foundations/index.js",
      "types": "./dist/foundations/index.d.ts"
    },
    "./foundations/blur": {
      "import": "./dist/foundations/blur.mjs",
      "require": "./dist/foundations/blur.js",
      "types": "./dist/foundations/blur.d.ts"
    },
    "./foundations/borders": {
      "import": "./dist/foundations/borders.mjs",
      "require": "./dist/foundations/borders.js",
      "types": "./dist/foundations/borders.d.ts"
    },
    "./foundations/breakpoints": {
      "import": "./dist/foundations/breakpoints.mjs",
      "require": "./dist/foundations/breakpoints.js",
      "types": "./dist/foundations/breakpoints.d.ts"
    },
    "./foundations/colors": {
      "import": "./dist/foundations/colors.mjs",
      "require": "./dist/foundations/colors.js",
      "types": "./dist/foundations/colors.d.ts"
    },
    "./foundations/radius": {
      "import": "./dist/foundations/radius.mjs",
      "require": "./dist/foundations/radius.js",
      "types": "./dist/foundations/radius.d.ts"
    },
    "./foundations/shadows": {
      "import": "./dist/foundations/shadows.mjs",
      "require": "./dist/foundations/shadows.js",
      "types": "./dist/foundations/shadows.d.ts"
    },
    "./foundations/sizes": {
      "import": "./dist/foundations/sizes.mjs",
      "require": "./dist/foundations/sizes.js",
      "types": "./dist/foundations/sizes.d.ts"
    },
    "./foundations/spacing": {
      "import": "./dist/foundations/spacing.mjs",
      "require": "./dist/foundations/spacing.js",
      "types": "./dist/foundations/spacing.d.ts"
    },
    "./foundations/typography": {
      "import": "./dist/foundations/typography.mjs",
      "require": "./dist/foundations/typography.js",
      "types": "./dist/foundations/typography.d.ts"
    },
    "./foundations/transition": {
      "import": "./dist/foundations/transition.mjs",
      "require": "./dist/foundations/transition.js",
      "types": "./dist/foundations/transition.d.ts"
    },
    "./foundations/z-index": {
      "import": "./dist/foundations/z-index.mjs",
      "require": "./dist/foundations/z-index.js",
      "types": "./dist/foundations/z-index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*.d.ts"
      ]
    }
  }
}
